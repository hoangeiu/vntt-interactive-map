<div class="modal fade" id="splitterModal" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="splitterModalTitle" aria-hidden="true">
    <div class="modal-dialog modal_width_50 modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white font-weight-bold" id="splitterModalTitle">
                    Splitter Information
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="splitterModal" class="text-dark font-weight-bold">
                    <div class="form-row" style="display: none;">
                        <div class="form-group col-md-6">
                            <label>Id</label>
                            <input type="text" name="id" class="form-control id" autocomplete="off" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Code</label>
                            <input type="text" name="code" class="form-control code" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Tên thiết bị</label>
                        <input type="text" name="name" class="form-control text-dark name" placeholder="Name"
                            autocomplete="off" required maxlength="40" />
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Port In</label>
                            <select class="form-control splitterIn" name="splitterIn">
                                <option value="1">1</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="splitterOut">Port Out</label>
                            <select class="form-control splitterOut" name="splitterOut" required>
                                <option></option>
                                <option value="4">4</option>
                                <option value="8">8</option>
                                <option value="16">16</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Ghi chú</label>
                        <input type="text" name="desc" class="form-control text-dark desc" placeholder="Mô tả"
                            autocomplete="off" maxlength="40" />
                    </div>
                    <div class="float-right">
                        <button type="button" class="btn btn-secondary font-weight-bold" data-dismiss="modal">
                            CLOSE
                        </button>
                        <button type="submit" class="btn btn-primary font-weight-bold" id="splitterSubmit">
                            SUBMIT
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>