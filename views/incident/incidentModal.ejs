<div class="modal fade" id="incidentModal" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="incidentModalTitle" aria-hidden="true">
    <div class="modal-dialog modal_width_50 modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark font-weight-bold" id="incidentModalTitle">
                    INCIDENT INFORMATION
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="incidentModal" class="text-dark font-weight-bold">
                    <div class="form-group" style="display: none;">
                        <label>Id</label>
                        <input type="text" name="id" class="form-control text-dark" />
                    </div>
                    <div class="form-group">
                        <label>Mã sự cố</label>
                        <input type="text" name="code" class="form-control text-dark code" placeholder="Mã sự cố"
                            autocomplete="off" maxlength="40" />
                    </div>
                    <div class="form-group">
                        <label>Kết nối</label>
                        <select class="form-control connection" name="connection" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Lượng KH</label>
                        <input type="text" name="customer" class="form-control text-dark customer"
                            placeholder="Lượng KH" autocomplete="off" disabled />
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="incidentStartDate">Bắt đầu</label>
                            <input type="text" name="incidentStartDate" class="form-control" id="incidentStartDate"
                                placeholder="Bắt đầu" autocomplete="off" required />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="incidentEndDate">Kết thúc</label>
                            <input type="text" name="incidentEndDate" class="form-control" id="incidentEndDate"
                                placeholder="Kết thúc" autocomplete="off" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="incidentDesc">Ghi chú</label>
                        <input type="text" name="incidentDesc" class="form-control text-dark" id="incidentDesc"
                            placeholder="Ghi chú" autocomplete="off" maxlength="40" />
                    </div>
                    <div class="float-right">
                        <button type="button" class="btn btn-secondary font-weight-bold" data-dismiss="modal">
                            CLOSE
                        </button>
                        <button type="submit" class="btn btn-primary font-weight-bold" id="cbSubmit" value="Validate!">
                            SUBMIT
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>