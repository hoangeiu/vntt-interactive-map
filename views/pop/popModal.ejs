<div class="modal fade" id="popModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="popModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal_width_50 modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark font-weight-bold" id="popModalTitle">POP Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="popModal" class="text-dark font-weight-bold">
                    <div class="form-group" style="display: none;">
                        <label>Id</label>
                        <input type="text" name="id" class="form-control text-dark id">
                    </div>
                    <div class="form-group" style="display: none;">
                        <label>Code</label>
                        <input type="text" name="code" class="form-control text-dark code">
                    </div>
                    <div class="form-group">
                        <label>Tên trạm POP<span style="color: red;"><sup>*</sup></span></label>
                        <input type="text" name="name" class="form-control text-dark name" placeholder="Tên POP"
                            autocomplete="off" required maxlength="40">
                    </div>
                    <div class="form-group">
                        <label>Mô tả</label>
                        <input type="text" name="desc" class="form-control text-dark desc" placeholder="Chú thích"
                            autocomplete="off" maxlength="40">
                    </div>
                    <div class="form-group">
                        <label>Tỉnh<span style="color: red;"><sup>*</sup></span></label>
                        <select data-placeholder="Tỉnh" class="form-control province" name="province" autocomplete="off"
                            required>
                            <option></option>
                        </select>
                    </div>
                    <span style="color: red; font-size: 11px;">* Trường bắt buộc điền/chọn</span>
                    <div class="float-right">
                        <button type="button" class="btn btn-secondary font-weight-bold"
                            data-dismiss="modal">CLOSE</button>
                        <button type="submit" class="btn btn-primary font-weight-bold" id="popSubmit">SUBMIT</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>