<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <% include sidebar%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <% include topbar%>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid mt-3">
                    <!-- DataTales -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fa fa-info-circle mr-2"></i>Thông tin POP
                            </h6>
                        </div>
                        <div class="card-body">
                            <div id="information">
                                <div class="h6 text-dark font-weight-bold d-flex flex-row justify-content-start">
                                    <div class="mr-3">
                                        <i class="fas fa-circle"></i>
                                        Tên: <span class="name"></span>
                                    </div>
                                    <div class="mr-3">
                                        <i class="fas fa-circle"></i>
                                        Thiết bị: <span class="totalOlt"></span>
                                    </div>
                                    <div class="mr-3">
                                        <i class="fas fa-circle"></i>
                                        ODF: <span class="totalOdf"></span>
                                    </div>
                                    <div class="mr-3">
                                        <i class="fas fa-circle"></i>
                                        Số kết nối: <span class="totalConnection"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-tools mr-2"></i>Quản lý thiết
                                bị</h6>
                        </div>
                        <div class="card-body">
                            <nav>
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <a class="nav-item nav-link active font-weight-bold" id="nav-olt-tab"
                                        data-toggle="tab" href="#nav-olt" role="tab" aria-controls="nav-olt"
                                        aria-selected="true">Thiết bị</a>
                                    <a class="nav-item nav-link font-weight-bold" id="nav-odf-tab" data-toggle="tab"
                                        href="#nav-odf" role="tab" aria-controls="nav-odf" aria-selected="false">ODF</a>
                                    <a class="nav-item nav-link font-weight-bold" id="nav-detail-tab" data-toggle="tab"
                                        href="#nav-detail" role="tab" aria-controls="nav-detail"
                                        aria-selected="false">Kết nối</a>
                                </div>
                            </nav>
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane fade show active" id="nav-olt" role="tabpanel"
                                    aria-labelledby="nav-olt-tab">
                                    <div class="table-responsive mt-3">
                                        <!-- Button -->
                                        <a href="#" class="btn btn-primary btn-icon-split btn-lg mb-3"
                                            id="addOltButton">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-plus-circle"></i>
                                            </span>
                                            <span class="text font-weight-bold">Thêm mới</span>
                                        </a>
                                        <table id="olt_table" class="table table-striped table-bordered"
                                            style="width:100%">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>ID</th>
                                                    <th>Tên thiết bị</th>
                                                    <th>Type</th>
                                                    <th>Sở hữu</th>
                                                    <!-- <th>IP</th>
                                                    <th>POP</th>
                                                    <th>Rack</th>
                                                    <th>U</th>
                                                    <th>Visa</th>
                                                    <th>Syslog</th> -->
                                                    <th>Ghi chú</th>
                                                    <th>Detail</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="nav-odf" role="tabpanel" aria-labelledby="nav-odf-tab">
                                    <div class="table-responsive mt-3">
                                        <!-- Button -->
                                        <a href="#" class="btn btn-primary btn-icon-split btn-lg mb-3"
                                            id="addOdfButton">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-plus-circle"></i>
                                            </span>
                                            <span class="text font-weight-bold">Thêm mới</span>
                                        </a>
                                        <table id="odf_table" class="table table-striped table-bordered"
                                            style="width:100%">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>ID</th>
                                                    <th>Tên</th>
                                                    <th>Dung lượng port</th>
                                                    <th>Ghi chú</th>
                                                    <th>Edit</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="nav-detail" role="tabpanel"
                                    aria-labelledby="nav-detail-tab">
                                    <div class="table-responsive mt-3">
                                        <a href="#" class="btn btn-primary btn-icon-split btn-lg mb-3"
                                            id="addConnectTN">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-plus-circle"></i>
                                            </span>
                                            <span class="text font-weight-bold">Toàn tuyến</span>
                                        </a>
                                        <a href="#" class="btn btn-success btn-icon-split btn-lg mb-3"
                                            id="addSeperateConnectTN">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-plus-circle"></i>
                                            </span>
                                            <span class="text font-weight-bold">Từng phần</span>
                                        </a>
                                        <table id="connect" class="table table-striped table-bordered"
                                            style="width:100%">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>ID</th>
                                                    <th>Tên kết nối</th>
                                                    <th>ODF đầu</th>
                                                    <th>Thiết bị đầu</th>
                                                    <th>Port đầu</th>
                                                    <th>Tủ cáp cuối</th>
                                                    <th>Thiết bị cuối</th>
                                                    <th>Port cuối</th>
                                                    <th>SLKN</th>
                                                    <th>KH</th>
                                                    <th>Trạng thái</th>
                                                    <th>Ghi chú</th>
                                                    <th>Edit</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->

        <% include oltModal%> <% include oltTmpModal%> <% include connectTNModal %> <% include connectTNSeperateModal %>
