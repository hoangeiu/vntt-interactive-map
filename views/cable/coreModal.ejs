<div class="modal fade" id="coreMD" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="coreMDTitle"
    aria-hidden="true">
    <div class="modal-dialog modal_width_50 modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white font-weight-bold" id="coreMDTitle">Thêm kết nối</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="coreMD" class="text-dark font-weight-bold">
                    <div class="form-row" style="display: none;">
                        <div class="form-group col-md-6">
                            <label>Id</label>
                            <input type="text" name="id" class="form-control id" autocomplete="off">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Code</label>
                            <input type="text" name="code" class="form-control code" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Tên core<span style="color: red;"><sup>*</sup></span></label>
                        <input type="text" name="name" class="form-control text-dark name" placeholder="Tên kết nối"
                            autocomplete="off" required maxlength="40">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Thiết bị đầu</label>
                            <input type="text" name="sNPort" class="form-control text-dark sNPort" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Port đầu</label>
                            <input type="number" name="sPort" class="form-control text-dark sPort"
                                placeholder="Start Device Port" autocomplete="off" required min="1">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Đích</label>
                            <input type="text" name="eNPort" class="form-control text-dark eNPort" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Port cuối</label>
                            <input type="number" name="ePort" class="form-control text-dark ePort"
                                placeholder="End Device Port" autocomplete="off" required min="1">
                        </div>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="error" class="form-check-input" id="errorCheckbox">
                        <label class="form-check-label" for="errorCheckbox">Error</label>
                    </div>
                    <div class="form-group">
                        <label>Ghi chú</label>
                        <input type="text" name="desc" class="form-control text-dark desc" placeholder="Ghi chú"
                            autocomplete="off" maxlength="40">
                    </div>
                    <span style="color: red; font-size: 11px;">* Trường bắt buộc điền/chọn</span>
                    <div class="float-right">
                        <button type="button" class="btn btn-secondary font-weight-bold"
                            data-dismiss="modal">CLOSE</button>
                        <button type="submit" class="btn btn-primary font-weight-bold" id="coreSubmit">SUBMIT</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>