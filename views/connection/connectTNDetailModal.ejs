<div class="modal fade" id="connectTNDetailMD" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="connectTNDetailMDTitle" aria-hidden="true">
    <div class="modal-dialog modal_width_50 modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white font-weight-bold" id="connectTNDetailMDTitle">Core cáp trục</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="connectTNDetailMD" class="text-dark font-weight-bold">
                    <div class="form-row" style="display: none;">
                        <div class="form-group col-md-6">
                            <label>Id</label>
                            <input type="text" name="id" class="form-control id" autocomplete="off">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Code</label>
                            <input type="text" name="code" class="form-control code" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <label>Tên kết nối<span style="color: red;"><sup>*</sup></span></label>
                            <input type="text" name="name" class="form-control text-dark font-weight-bold name"
                                placeholder="Tên kết nối" autocomplete="off" required maxlength="40">
                        </div>
                        <div class="form-group col-md-2">
                            <label>Trạng thái<span style="color: red;"><sup>*</sup></span></label>
                            <select class="form-control text-dark status" name="status" required>
                                <option></option>
                                <option value="1">Used</option>
                                <option value="0">Unused</option>
                                <option value="2">Error</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <label>ODF<span style="color: red;"><sup>*</sup></span></label>
                            <input type="text" name="beginODF" class="form-control text-dark font-weight-bold beginODF"
                                placeholder="ODF" autocomplete="off" required maxlength="40">
                        </div>
                        <div class="form-group col-md-2">
                            <label>Port<span style="color: red;"><sup>*</sup></span></label>
                            <input type="text" name="beginODFPort"
                                class="form-control text-dark font-weight-bold beginODFPort" placeholder="Port"
                                autocomplete="off" required maxlength="40">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <label>OLT<span style="color: red;"><sup>*</sup></span></label>
                            <input type="text" name="beginOLT" class="form-control text-dark font-weight-bold beginOLT"
                                placeholder="OLT" autocomplete="off" required maxlength="40">
                        </div>
                        <div class="form-group col-md-2">
                            <label>Port<span style="color: red;"><sup>*</sup></span></label>
                            <input type="text" name="beginOLTPort" class="form-control text-dark beginOLTPort"
                                autocomplete="off" min="0" readonly>
                            <!-- <select class="form-control text-dark beginOLTPort" name="beginOLTPort"></select> -->
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="d-flex align-items-center justify-content-between">
                            <label>Đấu nối</label>
                        </div>
                        <div id="mutiple-connect-detail">

                        </div>

                    </div>
                    <hr />
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <label>Đích</label>
                            <input type="text" name="endCabinet"
                                class="form-control text-dark font-weight-bold endCabinet" placeholder="CB/OLT"
                                autocomplete="off" required maxlength="40">
                        </div>
                        <div class="form-group col-md-2">
                            <label>Port</label>
                            <input type="text" name="endCBPort"
                                class="form-control text-dark font-weight-bold endCBPort" placeholder="Port"
                                autocomplete="off" required maxlength="40">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <label>Thiết bị</label>
                            <input type="text" name="endST" class="form-control text-dark font-weight-bold endST"
                                placeholder="Thiết bị" autocomplete="off" required maxlength="40">
                        </div>
                        <div class="form-group col-md-2">
                            <label>Port</label>
                            <input type="text" name="endSTPort"
                                class="form-control text-dark font-weight-bold endSTPort" placeholder="Port"
                                autocomplete="off" required maxlength="40">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Ghi chú</label>
                        <input type="text" name="desc" class="form-control text-dark desc" placeholder="Ghi chú"
                            autocomplete="off" maxlength="40">
                    </div>
                    <span style="color: red; font-size: 11px;">* Trường bắt buộc điền/chọn</span>
                    <div class="float-right">
                        <button type="button" class="btn btn-secondary font-weight-bold"
                            data-dismiss="modal">CLOSE</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>