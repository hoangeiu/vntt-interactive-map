<div class="modal fade" id="odfModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="odfModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal_width_50 modal-dialog-centered" role="document">
        <div class="modal-content border-dark">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white font-weight-bold" id="odftModalTitle">
                    Thông tin ODF
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="odfModal" class="text-dark font-weight-bold">
                    <div class="form-row" style="display: none;">
                        <div class="form-group col-md-6">
                            <label>Id</label>
                            <input type="text" name="id" class="form-control text-dark id" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Code</label>
                            <input type="text" name="code" class="form-control text-dark code" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Tên<span style="color: red;"><sup>*</sup></span></label>
                        <input type="text" name="name" class="form-control text-dark name" placeholder="Tên ODF"
                            autocomplete="off" maxlength="40" />
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Số Block<span style="color: red;"><sup>*</sup></span></label>
                            <input type="number" name="block" class="form-control text-dark block" min="1" max="100" />
                        </div>
                        <div class="form-group col-md-4">
                            <label>Số Tray/Block<span style="color: red;"><sup>*</sup></span></label>
                            <input type="number" name="tray" class="form-control text-dark tray" min="1" max="100" />
                        </div>
                        <div class="form-group col-md-4">
                            <label>Số Port/Tray<span style="color: red;"><sup>*</sup></span></label>
                            <input type="number" name="port" class="form-control text-dark port" min="1" max="200" />
                        </div>
                    </div>
                    <!-- <div class="form-group">
                        <label>Dung lượng Port</label>
                        <input type="number" name="totalPort" class="form-control totalPort"
                            placeholder="Dung lượng Port" autocomplete="off" min="1" />
                    </div> -->
                    <div class="form-group">
                        <label>Ghi chú</label>
                        <input type="text" name="desc" class="form-control text-dark desc" placeholder="Ghi chú"
                            autocomplete="off" maxlength="40" />
                    </div>
                    <span style="color: red; font-size: 11px;">* Trường bắt buộc điền/chọn</span>
                    <div class="float-right">
                        <button type="button" class="btn btn-secondary font-weight-bold" data-dismiss="modal">
                            CLOSE
                        </button>
                        <button type="submit" class="btn btn-primary font-weight-bold" id="odfSubmit">
                            SUBMIT
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>